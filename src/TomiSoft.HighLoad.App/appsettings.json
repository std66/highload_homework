{
  "ConnectionStrings": {
    "postgres": "Host=postgres;Username=root;Password=password;Database=mydb;MinPoolSize=20;MaxPoolSize=30;Connection Idle Lifetime=300;",
    "redis": "redis:6379"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "UseUtcTimestamp": true,
        "JsonWriterOptions": {
          "Indented": false
        }
      }
    }
  },
  "AllowedHosts": "*"
}
